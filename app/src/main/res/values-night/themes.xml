<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with dark customization -->
    <style name="Base.Theme.Hello_World" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark theme customization -->
        <item name="colorPrimary">#30475E</item> <!-- Darker shade of blue-gray -->
        <item name="colorSecondary">#F5F0D9</item> <!-- Light accent color for contrast -->
        <item name="colorTertiary">#1A1A1A</item> <!-- Very dark background for consistency -->
        <item name="android:buttonStyle">@style/CustomDarkButtonStyle</item> <!-- Custom button style for dark theme -->
        <item name="android:textColorPrimary">#FFFFFF</item> <!-- White primary text for readability -->
        <item name="android:textColorSecondary">#B0BEC5</item> <!-- Muted gray for secondary text -->
    </style>

    <style name="CustomDarkButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">#F5F0D9</item> <!-- Light button background for contrast -->
        <item name="android:textColor">#1A1A1A</item> <!-- Dark button text color -->
    </style>
</resources>
